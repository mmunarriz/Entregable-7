    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark py-0" style="height: 100px;">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="/img/logo3.jpg" style="width: 150px; border: 5px outset #0549A8;
border-radius: 40px;">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#navbarOffcanvasLg"
                aria-controls="navbarOffcanvasLg" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="offcanvas offcanvas-end" tabindex="-1" id="navbarOffcanvasLg"
                aria-labelledby="navbarOffcanvasLgLabel">

                <div class="offcanvas-header">
                    <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Offcanvas</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>

                <div class="offcanvas-body" style="justify-content: space-between;">
                    <div class="navbar-nav justify-content-end mb-2 mb-md-0">

                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="/products">Productos</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                                aria-expanded="false">
                                Categorías
                            </a>
                            <ul class="dropdown-menu" style="z-index: 2;">
                                <li><a class="dropdown-item" href="/products?category=Home+%26+Kitchen">Bazar y
                                        cocina</a></li>
                                <li><a class="dropdown-item" href="/products?category=Electronics">Electrónica</a></li>
                                <li><a class="dropdown-item" href="/products?category=Furniture">Muebles</a></li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>

                                <li><a class="dropdown-item" href="/products?category=Clothing">Ropa</a></li>
                                <li><a class="dropdown-item" href="/products?category=Beauty">Belleza</a></li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li><a class="dropdown-item" href="/products?category=Sports">Deportes</a></li>

                            </ul>
                        </li>


                    </div>
                    <div class="navbar-nav smb-2 mb-md-0">
                        <li class="nav-item">
                            <a class="nav-link" href="/chat"><i class="fa-regular fa-comments"></i> Chat</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link disabled" aria-disabled="true"><i class="fa-regular fa-user"></i> Mi
                                cuenta</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link active" href="/carts/{{user.cart._id}}"><i
                                    class="fa-solid fa-cart-shopping"></i> Mi carrito</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/api/sessions/logout"><i
                                    class="fa-solid fa-arrow-right-from-bracket"></i> Log
                                out</a>
                        </li>
                    </div>

                </div>

            </div>
        </div>
    </nav>
</header>
<main>
    <div class="container">


        <div class="card">
            <div class="row">
                <div class="col-md-8 cart">
                    <div class="title">
                        <div class="row">
                            <div class="col">
                                <h4><b>Shopping Cart</b></h4>
                            </div>
                            <div class="col align-self-center text-right text-muted">3 items</div>
                        </div>
                    </div>

                    {{#each cart.products}}
                    <div class="row border-top ">
                        <div class="row main align-items-center">
                            <div class="col-2"><img class="img-fluid" src="/img/{{this.product.thumbnail.[0]}}"></div>
                            <div class="col">
                                <div class="row text-muted">{{this.product.category}}</div>
                                <div class="row">{{this.product.title}}</div>
                            </div>
                            <div class="col">
                                <a href="#">-</a><a href="#" class="border">{{this.quantity}}</a><a href="#">+</a>
                            </div>
                            <div class="col">$ {{this.product.price}}</div>
                            <div class="col px-0"><span class="close">&#10005;</span></div>
                        </div>
                    </div>
                    {{/each}}

                    <div class="back-to-shop"><a href="#">&leftarrow;</a><span class="text-muted">Back to shop</span>
                    </div>
                </div>
                <div class="col-md-4 summary">
                    <div>
                        <h5><b>Summary</b></h5>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col" style="padding-left:0;">ITEMS 3</div>
                        <div class="col text-right">&euro; 132.00</div>
                    </div>
                    <form>
                        <p>SHIPPING</p>
                        <select>
                            <option class="text-muted">Standard-Delivery- &euro;5.00</option>
                        </select>
                        <p>GIVE CODE</p>
                        <input id="code" placeholder="Enter your code">
                    </form>
                    <div class="row" style="border-top: 1px solid rgba(0,0,0,.1); padding: 2vh 0;">
                        <div class="col">TOTAL PRICE</div>
                        <div class="col text-right">&euro; 137.00</div>
                    </div>
                    <button class="btn">CHECKOUT</button>
                </div>
            </div>

        </div>

    </div>
</main>

