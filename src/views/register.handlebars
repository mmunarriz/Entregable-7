<section class="h-100 gradient-form" style="background-color: #FED6E3;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
                <div class="card rounded-3 text-black">
                    <div class="row g-0">
                        <div class="col-lg-6">
                            <div class="card-body p-md-5 mx-md-4">

                                <div class="text-center">
                                    <img src="img/logo1.jpg" style="width: 200px; border-radius:50%" alt="logo">
                                </div>

                                <form id="registerForm">

                                    <div
                                        class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
                                        <p  class="small mt-1 mb-1">Por favor, complete todos los campos:</p>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input name="first_name" type="text" class="form-control" placeholder="Nombre">
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input name="last_name" type="text" class="form-control" placeholder="Apellido">
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input name="age" type="number" class="form-control" placeholder="Edad">
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input name="email" type="email" class="form-control" placeholder="E-mail">
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input name="password" type="password" class="form-control"
                                            placeholder="Contraseña">
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="password" class="form-control"
                                            placeholder="Confirma tu contraseña">
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="defaultCheck12">
                                        <label for="defaultCheck12" class="grey-text">Quiero suscribirme al newsletter
                                        </label>
                                    </div>

                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="defaultCheck13">
                                        <label for="defaultCheck13" class="grey-text">Acepto los
                                            <a href="#" class="blue-text"> términos y condiciones</a>
                                        </label>
                                    </div>

                                    <div class="text-center pt-1 mb-5 pb-1"
                                        style="display:flex; flex-direction:column;">
                                        <button type="submit" class="btn btn-dark gradient-custom-2 mb-3 btn-shadow">REGISTRARSE</button>
                                        <a class="text-muted" href="/resetpassword">Olvidaste tu contraseña?</a>
                                    </div>

                                    <div class="d-flex align-items-center justify-content-center pb-4">
                                        <p class="mb-0 me-2">Ya tienes una cuenta?</p>
                                        <a href="/login" class="btn btn-outline-dark">Ingresa aquí</a>
                                    </div>
                                </form>

                            </div>
                        </div>
                        <div class="col-lg-6 d-flex gradient-custom-2"
                            style="flex-direction: column; justify-content:space-evenly ; align-items:center">
                            <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                <h3 class="mt-1 mb-2 pb-1">Tienda de remeras!</h3>
                                <p class="mb-0">REGISTRATE</p>
                            </div>
                            <img src="/img/banner2.jpg" class=" px-3 py-4 p-md-5" style="width:70%; border: 2px solid #fff"
                                alt="">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

