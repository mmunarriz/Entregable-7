<section class="h-100 gradient-form" style="background-color: #FED6E3;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
                <div class="card rounded-3 text-black">
                    <div class="row g-0">
                        <div class="col-lg-6">
                            <div class="card-body p-md-5 mx-md-4">

                                <div class="text-center">
                                    <img src="img/logo1.jpg" style="width: 200px; border-radius:50%" alt="logo">
                                    <h3 class="mt-1 mb-3 pb-1">Tienda de remeras!</h3>
                                </div>

                                <form id="resetForm">
                                    <div class="form-outline mb-4">
                                        <input name="email" type="email" class="form-control" placeholder="E-mail">
                                    </div>

                                    <div class="text-center pt-1 mb-5 pb-1"
                                        style="display:flex; flex-direction:column;">
                                        <button type="normal"
                                            class="btn btn-dark gradient-custom-2 mb-3 btn-shadow">ENVIAR
                                            CÓDIGO</button>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input name="code" type="password" class="form-control"
                                            placeholder="Código de recuperación">
                                    </div>


                                    <div class="form-outline mb-4">
                                        <input name="password" type="password" class="form-control"
                                            placeholder="Nueva contraseña">
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="password" class="form-control"
                                            placeholder="Confirma tu contraseña">
                                    </div>

                                    <div class="text-center pt-1 mb-5 pb-1"
                                        style="display:flex; flex-direction:column;">
                                        <button type="submit"
                                            class="btn btn-dark gradient-custom-2 mb-3 btn-shadow">CAMBIAR
                                            CONTRASEÑA</button>
                                        <a class="text-muted" href="/register">Registrarse</a>
                                        <a class="text-muted" href="/login">Iniciar sesión</a>
                                    </div>

                                </form>

                            </div>
                        </div>
                        <div class="col-lg-6 d-flex gradient-custom-2"
                            style="flex-direction: column; justify-content:space-evenly ; align-items:center">
                            <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                <h4 class="mb-1">RECUPERA TU CONTRASEÑA</h4>
                                <p class="small mb-0">Recupera tu contraseña con el código enviado a tu e-mail.</p>
                            </div>
                            <img src="/img/banner1.jpg" class=" px-3 py-4 p-md-5"
                                style="width:70%; border: 2px solid #fff" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

